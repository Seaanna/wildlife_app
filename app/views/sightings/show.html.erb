<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @sighting.date %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @sighting.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @sighting.longitude %>
</p>

<p>
  <strong>Animal:</strong>
  <%= @sighting.animal.common_name %>
</p>

<p>
  <ul>
    <% @animal.sightings.each do |sighting| %>
        <li>
            <%= sighting.common_name %>
        </li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_sighting_path(@sighting) %> |
